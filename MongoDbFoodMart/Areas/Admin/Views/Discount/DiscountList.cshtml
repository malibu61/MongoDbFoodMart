@model List<MongoDbFoodMart.Dtos.DiscountDto.ResultDiscountDto>

@{
    ViewData["Title"] = "DiscountList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container" style="margin-top:-10px;">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürünler</div>
                    </div>

                    <table class="table table-hover">

                        <tr>
                            <th>#</th>
                            <th>Id</th>
                            <th>Başlık</th>
                            <th>İndirim Oranı</th>
                            <th>Resim yolu</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.DiscountId</td>
                                <td>@item.Title</td>
                                <td>@item.DiscountRate</td>
                                <td>@item.FeatureImageURL</td>
                                <td><a href="/Admin/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-success">Güncelle</a></td>
                                <td><a href="/Admin/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </table>
                </div>
                <a href="/Admin/Discount/CreateDiscount" class="btn btn-info">Yeni Ürün Girişi</a>
            </div>
        </div>
    </div>
</div>



