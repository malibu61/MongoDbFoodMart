@model MongoDbFoodMart.Dtos.DiscountDto.GetByIdDiscountDto

@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container" style="margin-top:-10px;">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">

                <div class="card-header">
                    <div class="card-title">Ürün Güncelleme Sayfası</div>
                </div>

                <form method="post">

                    <br />
                    <label class="form-control">Id</label>
                    @Html.TextBoxFor(x => x.DiscountId, new { @class = "form-control" })
                    <br /><label class="form-control">Başlık</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br />
                    <label class="form-control">İndirim Oranı</label>
                    @Html.TextBoxFor(x => x.DiscountRate, new { @class = "form-control" })
                    <br />
                    <label class="form-control">Resim Yolu</label>
                    @Html.TextBoxFor(x => x.FeatureImageURL, new { @class = "form-control" })
                    <br />
                    <button class="btn btn-outline-warning">Güncelle</button>

                </form>

            </div>
        </div>
    </div>
</div>





