@model MongoDbFoodMart.Dtos.CategoryDto.CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top:-10px;">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">

                <div class="card-header">
                    <div class="card-title">Kategori Güncelleme Sayfası</div>
                </div>


                <form method="post">

                    <br />
                    <label class="form-control">Kategori Adı</label>
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                    <br />
                    <label class="form-control">Resim Yolu Adı</label>
                    @Html.TextBoxFor(x => x.CategoryImageURL, new { @class = "form-control" })
                    <br />

                    <button class="btn btn-outline-warning">Ekle</button>

                </form>


            </div>
        </div>
    </div>
</div>



