@model List<MongoDbFoodMart.Dtos.CategoryDto.ResultCategoryDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="container" style="margin-top:-10px;">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Form Elements</div>
                    </div>

                    <table class="table table-hover">

                        <tr>
                            <th>#</th>
                            <th>Id</th>
                            <th>Kategori Adı</th>
                            <th>Resim Yolu</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.CategoryId</td>
                                <td>@item.CategoryName</td>
                                <td>@item.CategoryImageURL</td>
                                <td><a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
                                <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </table>
                </div>
                <a href="/Admin/Category/CreateCategory" class="btn btn-info">Yeni Kategori Girişi</a>
            </div>
        </div>
    </div>
</div>

