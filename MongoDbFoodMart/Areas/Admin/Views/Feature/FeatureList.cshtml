@model List<MongoDbFoodMart.Dtos.FeatureDto.ResultFeatureDto>

@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container" style="margin-top:-10px;">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürünler</div>
                    </div>

                    <table class="table table-hover">

                        <tr>
                            <th>#</th>
                            <th>Id</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Kategori Id</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.FeatureId</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.CategoryId</td>
                                <td><a href="/Admin/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>
                                <td><a href="/Admin/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </table>
                </div>
                <a href="/Admin/Feature/CreateFeature" class="btn btn-info">Yeni Featured Ürün Girişi</a>
            </div>
        </div>
    </div>
</div>

