@model MongoDbFoodMart.Dtos.CustomerDto.GetByIdCustomerDto

@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top:-10px;">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">

                <div class="card-header">
                    <div class="card-title">Müşteri Güncelleme Sayfası</div>
                </div>

                <form method="post">

                    <br />
                    <label class="form-control">Ürün Id</label>
                    @Html.TextBoxFor(x => x.CustomerId, new { @class = "form-control", @readonly = "readonly" })
                    <br />
                    <label class="form-control">Ürün Adı</label>
                    @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
                    <br />
                    <button class="btn btn-outline-warning">Güncelle</button>

                </form>

            </div>
        </div>
    </div>
</div>





