@model MongoDbFoodMart.Dtos.ProductDto.CreateProductDto

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top:-10px;">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">

                <div class="card-header">
                    <div class="card-title">Ürün Ekleme Sayfası</div>
                </div>


                <form method="post">

                    <br />
                    <label class="form-control">Ürün Adı</label>
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                    <br />
                    <label class="form-control">Resim Yolu Adı</label>
                    @Html.TextBoxFor(x => x.ProductImageURL, new { @class = "form-control" })
                    <br />
                    <label class="form-control">Fiyat</label>
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                    <br />
                    <label class="form-control">Kategori</label>
                    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
                    <br />

                    <button class="btn btn-outline-warning">Ekle</button>

                </form>


            </div>
        </div>
    </div>
</div>




