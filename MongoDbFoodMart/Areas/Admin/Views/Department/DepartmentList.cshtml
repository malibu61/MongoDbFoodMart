@model List<MongoDbFoodMart.Dtos.DepartmentDto.ResultDepartmentDto>

@{
    ViewData["Title"] = "DepartmentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container" style="margin-top:-10px;">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürünler</div>
                    </div>

                    <table class="table table-hover">

                        <tr>
                            <th>#</th>
                            <th>Id</th>
                            <th>Departman Adı</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.DepartmentId</td>
                                <td>@item.DepartmentName</td>
                                <td><a href="/Admin/Department/UpdateDepartment/@item.DepartmentId" class="btn btn-success">Güncelle</a></td>
                                <td><a href="/Admin/Department/DeleteDepartment/@item.DepartmentId" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </table>
                </div>
                <a href="/Admin/Department/CreateDepartment" class="btn btn-info">Yeni Departman Girişi</a>
            </div>
        </div>
    </div>
</div>



