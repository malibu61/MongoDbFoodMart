@model MongoDbFoodMart.Dtos.MailDto.SendMailDto

<section class="py-5">
    <div class="container-fluid">

        <div class="bg-secondary py-5 my-5 rounded-5" style="background: url('images/bg-leaves-img-pattern.png') no-repeat;">
            <div class="container my-5">
                <div class="row">
                    <div class="col-md-6 p-5">
                        <div class="section-header">
                            <h2 class="section-title display-4"><span class="text-primary">İndirimleri Kaçırmamak İçin</span> Üye Olun!</h2>
                        </div>
                        <p>İndirimleri kaçırmamak için hemen üye olun! Özel fırsatlar, kampanyalar ve size özel avantajlarla dolu bir alışveriş deneyimi sizi bekliyor.</p>
                    </div>
                    <div class="col-md-6 p-5">
                        <form asp-action="SendMail" asp-controller="Default" method="post">

                            <div class="mb-3">
                                <label for="name" class="form-label">Ad Soyad</label>
                                <input type="text"
                                       class="form-control form-control-lg" asp-for="Name" id="name" placeholder="Ad Soyad">
                            </div>

                            <div class="mb-3">
                                <label for="" class="form-label">Email</label>
                                <input type="email" class="form-control form-control-lg" asp-for="ReceiverMail" id="email" placeholder="abc@mail.com">
                            </div>

                            <div class="mb-3">
                                <label for="" class="form-label">Konu</label>
                                <input type="text" class="form-control form-control-lg" asp-for="Subject" id="email" placeholder="Konuyu Giriniz">
                            </div>

                            <div class="mb-3">
                                <label for="" class="form-label">Mesaj</label>
                                <textarea rows="2" class="form-control form-control-lg" asp-for="Body" id="email" placeholder="Açıklama Giriniz"></textarea>

                            </div>


                            <div class="form-check form-check-inline mb-3">
                                <label class="form-check-label" for="subscribe">
                                    <input class="form-check-input" type="checkbox" id="subscribe" value="subscribe">
                                    Bültenimize Abone Ol!
                                </label>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-dark btn-lg">Gönder</button>
                            </div>
                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>
</section>